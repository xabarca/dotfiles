#include "themes/dracula"
#include "colors"
#include "herbe"
#include "xterm"
#include "suckless"

*.scrollBar:	false
*.font:	xft:Hack Nerd Font:pixelsize=13:antialias=true
*.boldFont:	xft:Hack Nerd Font:pixelsize=14:weight=bold
*.letterSpace:	-1
*.saveLines:	1000000


urxvt.termName:	rxvt-unicode

!--- fake transparency in URXVT (enough for me)
urxvt*transparent: true
urxvt*shading: 35
urxvt*tintColor: bg

!-- fading when focus off ----
!urxvt.fading: 32
!urxvt.fadeColor: bg

!-- real transparency (compositor needed) --
!URxvt*depth:      32
!URxvt.background: [90]bg  


